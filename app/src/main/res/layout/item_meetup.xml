<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_large"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_rectangle_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edit" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light"
        android:textSize="@dimen/textsize_small" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal" >
        <com.brainyapps.funtivity.ui.view.MySquareImageView
            android:id="@+id/img_photo_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="@dimen/image_large"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_normal"
            android:orientation="vertical" >
            <com.brainyapps.funtivity.ui.view.MySquareImageView
                android:id="@+id/img_photo_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_large" />
            <com.brainyapps.funtivity.ui.view.MySquareImageView
                android:id="@+id/img_photo_c"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_large"
                android:layout_marginTop="@dimen/margin_normal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>